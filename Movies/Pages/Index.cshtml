@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
    <div class="content">
        <div class="results">
            <h1>Movies</h1>
            @foreach (Movie movie in Model.Movies)
            {
                <div class="movie-entry">
                    <h2>@movie.Title (@movie.Year)</h2>
                    <p>Rated @movie.MPAA_Rating</p>
                    <div class="reviews">
                        <div>
                            Rotten Tomatoes
                            <h3>
                                @movie.Rotten_Tomatoes_Rating
                            </h3>
                        </div>
                        <div>
                            IMDB
                            <h3>
                                @movie.IMDB_Rating
                            </h3>
                        </div>
                    </div>
                </div>
            }

        </div>
        <form method="post">
            <h4>Search</h4>
            <input type="text" name="search" />
            <input type="submit" value="Search and Filter" />
            <h4>Filter by Rating</h4>
            <div class="checkbox-list">
                <label>
                    <input name="rating" type="checkbox" value="G" />
                    Rated G
                </label>
                <label>
                    <input name="rating" type="checkbox" value="PG" />
                    Rated PG
                </label>
                <label>
                    <input name="rating" type="checkbox" value="PG-13" />
                    Rated PG-13
                </label>
                <label>
                    <input name="rating" type="checkbox" value="R" />
                    Rated R
                </label>
                <label>
                    <input name="rating" type="checkbox" value="NC-17" />
                    Rated NC-17
                </label>
            </div>
        </form>
    

    </div>






